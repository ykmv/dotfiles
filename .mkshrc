#!/bin/mksh
# Path and settings and PS1
export PS1='[34m./${PWD##*/} [32m$(git branch 2>/dev/null | grep \* | sed "s/$/ /" )[0m$ '

# Aliases
alias vrc="$EDITOR ~/.config/vim/vimrc"
alias shrc="$EDITOR ~/.mkshrc"
alias ls="ls --color=auto"

alias vimdiff="nvim -d"

alias q="exit"

alias d2="cd $SDA2"
alias p="cd $PROJ"
alias P="cd $PROG"
alias g="cd $GAMES"
alias d="cd $DOCS"
alias pc98="cd $SDA2/pc98"
alias i="cd $IMAGES"
alias S="cd $IMAGES/Screenshots"
alias r="cd $RECORDS"

alias acme="acme -f $PLAN9/font/fixed/unicode.7x14.font"

alias  cr="cargo run"
alias  cb="cargo build"
alias cch="cargo check"
alias  cn="cargo new"
alias  ci="cargo install"
alias  cbloat="cargo bloat"
alias  ctree="cargo tree" 

alias gr="go run"
alias gb="go build"

alias gch="git checkout"
alias gbr="git branch"
alias gco="git commit"

alias  thc="thcrap"
alias thcr="thcrapru"

alias jj="java -jar"

nld() {cp $DOCS/latex/template.tex ./$1.tex}

alias kb="$EDITOR ~/vimwiki/index.wiki"
alias kbw="nvim -c ':e ~/vimwiki/index.wiki' -c ':VimwikiALL2HTML' -c ':q!' ; $BROWSER ~/vimwiki_html/index.html"

export LANG=en_US.UTF-8
