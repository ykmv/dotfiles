#!/bin/mksh
# Path and settings and PS1
export PS1='[34m./${PWD##*/} [32m$(git branch 2>/dev/null | grep \* | sed "s/$/ /" )[0m$ '

PATH=$PATH:~/.scripts
PLAN9=/home/yakumov/plan9port; export PLAN9
PATH=$PATH:$PLAN9/bin; export PATH
PATH=$PATH:~/.yarn/bin; export PATH

FONT=$PLAN9/font/fixed/unicode.7x14.font; export FONT


# Different variables
export FZF_DEFAULT_OPTS="--layout=reverse --height=50%"
export VIMINIT="source ~/.config/vim/vimrc"

export TERM="termite"
export EDITOR="nvim"
export BROWSER="firefox"

export SDA2="$HOME/sda2"
export PROJ="$HOME/sda2/projects"
export PROG="$HOME/sda2/programs"
export DOCS="$HOME/sda2/docs"
export GAMES="$HOME/sda2/games"
export SCRIPTS="$HOME/.scripts"
export IMAGES="$SDA2/images"
export RECORDS="$SDA2/records"
export VMS="$SDA2/vm/img"

export THCRAP=$GAMES/thcrap
export NP21DIR=~/sda2/pc98/np2fmgen

# Aliases
alias vrc="$EDITOR ~/.config/vim/vimrc"
alias shrc="$EDITOR ~/.mkshrc"
alias ls="ls --color=auto"

alias vimdiff="nvim -d"

alias q="exit"

alias d2="cd $SDA2"
alias p="cd $PROJ"
alias P="cd $PROG"
alias g="cd $GAMES"
alias d="cd $DOCS"
alias pc98="cd $SDA2/pc98"
alias i="cd $IMAGES"
alias S="cd $IMAGES/Screenshots"
alias r="cd $RECORDS"

alias acme="acme -f $PLAN9/font/fixed/unicode.7x14.font"

alias  cr="cargo run"
alias  cb="cargo build"
alias cch="cargo check"
alias  cn="cargo new"
alias  ci="cargo install"
alias  cbloat="cargo bloat"
alias  ctree="cargo tree" 

alias gr="go run"
alias gb="go build"

alias gch="git checkout"
alias gbr="git branch"
alias gco="git commit"

alias  thc="thcrap"
alias thcr="thcrapru"

alias jj="java -jar"

nld() {
    cp $DOCS/latex/template.tex ./$1.tex
}

export LANG=en_US.UTF-8
